<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="768.0" prefWidth="1024.0" styleClass="background" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scenes.SettingScene">
  <stylesheets>
    <URL value="@howToPlayScene.css" />
  </stylesheets>
   <children>
      <Button fx:id="backButton" alignment="CENTER" layoutX="911.0" layoutY="27.0" mnemonicParsing="false" onAction="#backToMainMenu" text="Back">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Text fill="WHITE" layoutX="503.0" layoutY="56.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Setting">
         <font>
            <Font size="25.0" />
         </font>
      </Text>
      <Text fx:id="testChangeText" fill="WHITE" layoutX="74.0" layoutY="140.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sound">
         <font>
            <Font size="20.0" />
         </font>
      </Text>
      <Text fill="WHITE" layoutX="74.0" layoutY="215.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Move up">
         <font>
            <Font size="20.0" />
         </font>
      </Text>
      <Text fill="WHITE" layoutX="74.0" layoutY="290.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Move down">
         <font>
            <Font size="20.0" />
         </font>
      </Text>
      <Text fill="WHITE" layoutX="74.0" layoutY="365.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Move left">
         <font>
            <Font size="20.0" />
         </font>
      </Text>
      <Text fill="WHITE" layoutX="74.0" layoutY="440.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Move right">
         <font>
            <Font size="20.0" />
         </font>
      </Text>
      <Slider fx:id="soundSlider" layoutX="266.0" layoutY="124.0" onDragDetected="#changeSound" prefHeight="14.0" prefWidth="551.0" value="50.0">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <tooltip>
            <Tooltip text="You can change sound by either click and move your mouse left or right">
               <font>
                  <Font size="14.0" />
               </font>
            </Tooltip>
         </tooltip>
      </Slider>
      <Button fx:id="moveUpButton" alignment="CENTER" layoutX="462.0" layoutY="193.0" mnemonicParsing="false" onAction="#changeMoveUp" prefHeight="26.0" prefWidth="158.0" text="Button">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <tooltip>
            <Tooltip text="Change move up button (default W)">
               <font>
                  <Font size="14.0" />
               </font>
            </Tooltip>
         </tooltip>
      </Button>
      <Button fx:id="moveDownButton" layoutX="462.0" layoutY="269.0" mnemonicParsing="false" onAction="#changeMoveDown" prefHeight="26.0" prefWidth="158.0" text="Button">
         <tooltip>
            <Tooltip text="Change move down button (default S)">
               <font>
                  <Font size="14.0" />
               </font>
            </Tooltip>
         </tooltip>
      </Button>
      <Button fx:id="moveLeftButton" layoutX="462.0" layoutY="345.0" mnemonicParsing="false" onAction="#changeMoveLeft" prefHeight="26.0" prefWidth="158.0" text="Button">
         <tooltip>
            <Tooltip text="Change move left button (default A)">
               <font>
                  <Font size="14.0" />
               </font>
            </Tooltip>
         </tooltip>
      </Button>
      <Button fx:id="moveRightButton" layoutX="462.0" layoutY="420.0" mnemonicParsing="false" onAction="#changeMoveRight" prefHeight="26.0" prefWidth="158.0" text="Button">
         <tooltip>
            <Tooltip text="Change move right button (default D)">
               <font>
                  <Font size="14.0" />
               </font>
            </Tooltip>
         </tooltip>
      </Button>
      <Text fill="WHITE" layoutX="74.0" layoutY="510.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Bomb placement">
         <font>
            <Font size="20.0" />
         </font>
      </Text>
      <Button fx:id="bombPlacementButton" layoutX="462.0" layoutY="495.0" mnemonicParsing="false" onAction="#changeBombPlacement" prefHeight="26.0" prefWidth="158.0" text="Button">
         <tooltip>
            <Tooltip text="Change keyCode to place a bomb" />
         </tooltip>
      </Button>
      <Text fx:id="statusText" fill="WHITE" layoutX="74.0" layoutY="655.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Changing" />
   </children>
</AnchorPane>
