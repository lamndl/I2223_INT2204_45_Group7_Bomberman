<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="exitButton" prefHeight="768.0" prefWidth="1024.0" styleClass="anchor" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uet.hal.MainMenu">
  <padding>
    <Insets bottom="10" left="25" right="25" top="25" />
  </padding>
  <stylesheets>
    <URL value="@mainMenu.css" />
  </stylesheets>
   <children>
      <Button id="campaignButton" fx:id="campaignButton" alignment="CENTER" layoutX="61.0" layoutY="166.0" mnemonicParsing="false" onAction="#switchToCampaignScene" style="-fx-pref-width: 200; -fx-border-color: red;" stylesheets="@mainMenu.css" text="Campaign">
         <font>
            <Font size="24.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button id="endlessButton" fx:id="endlessButton" alignment="CENTER" layoutX="61.0" layoutY="247.0" mnemonicParsing="false" onAction="#switchToEndlessScene" style="-fx-pref-width: 200;" stylesheets="@mainMenu.css" text="Endless">
         <font>
            <Font size="24.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button id="settingButton" fx:id="settingButton" alignment="CENTER" layoutX="61.0" layoutY="329.0" mnemonicParsing="false" onAction="#switchToSettingScene" style="-fx-pref-width: 200;" text="Setting">
         <font>
            <Font size="24.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button id="howToPlayButton" fx:id="howToPlayButton" alignment="CENTER" layoutX="61.0" layoutY="413.0" mnemonicParsing="false" onAction="#switchToHowToPlayScene" style="-fx-pref-width: 200;" stylesheets="@mainMenu.css" text="How to play">
         <font>
            <Font size="24.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button id="creditButton" fx:id="creditButton" alignment="CENTER" layoutX="61.0" layoutY="494.0" mnemonicParsing="false" onAction="#switchToCreditScene" style="-fx-pref-width: 200;" text="Credit">
         <font>
            <Font size="24.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <CheckBox id="musicCheckBox" layoutX="746.0" layoutY="37.0" mnemonicParsing="false" onAction="#toggleMusicCheckBox" selected="true" style="-fx-background-color: green;" stylesheets="@mainMenu.css" text="Music" textFill="WHITE">
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </CheckBox>
      <Button id="nameButton" fx:id="nameButton" alignment="CENTER" layoutX="512.0" layoutY="38.0" mnemonicParsing="false" onAction="#togglePlayerButton" style="-fx-pref-width: 150;" stylesheets="@mainMenu.css" text="Player">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button id="exitButton" alignment="CENTER" layoutX="888.0" layoutY="27.0" mnemonicParsing="false" onAction="#exitGame" text="EXIT" textFill="#ff1010">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </Button>
      <Button id="characterMainMenuButton" fx:id="characterMainMenuButton" alignment="CENTER" layoutX="699.0" layoutY="545.0" mnemonicParsing="false" onAction="#changeCharaterMainMenu" style="-fx-background-color: none;" stylesheets="@mainMenu.css" text="Unknown Charater" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Garamond" size="19.0" />
         </font>
      </Button>
      <ImageView fitHeight="296.0" fitWidth="192.0" layoutX="709.0" layoutY="219.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Pictures/testTransparency.png" />
         </image>
      </ImageView>

   </children>
</AnchorPane>
